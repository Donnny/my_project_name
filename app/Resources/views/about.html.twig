<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<div class="wrapper row3">
    <main class="container clear">
        <!-- main body -->
        <!-- ################################################################################################ -->
        <div class="group">
            <div class="one_half first">
                <h2 class="heading btmspace-50">Maecenas libero nunc eu erat</h2>
                <figure id="featuredpost"><img src="images/demo/featured.png" alt="">
