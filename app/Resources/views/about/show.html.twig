{% extends 'base.html.twig' %}

{% block body %}
    <h1>About</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ about.id }}</td>
            </tr>
            <tr>
                <th>Koptitle</th>
                <td>{{ about.kopTitle }}</td>
            </tr>
            <tr>
                <th>Headtitle</th>
                <td>{{ about.headTitle }}</td>
            </tr>
            <tr>
                <th>Shortdesc</th>
                <td>{{ about.shortDesc }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if about.createdAt %}{{ about.createdAt|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('about_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('about_edit', { 'id': about.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
