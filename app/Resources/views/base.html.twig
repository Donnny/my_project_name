<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">

        {% stylesheets 'bundles/framework/template/layout/styles/*' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% image 'bundles/framework/template/images/demo/backgrounds/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endimage %}

        {% image 'bundles/framework/template/images/demo/gallery/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endimage %}

        {% javascripts 'bundles/framework/template/layout/scripts/*' %}
        <link rel="script" href="{{ asset_url }}" />
        {% endjavascripts %}
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="wrapper row1">
        <header id="header" class="clear">
            <div id="logo" class="fl_left">
                <h1><a href="index.html">Taalcursus</a></h1>
            </div>
            {% block sidebar %}
                <nav id="mainav" class="fl_right">
                    <ul class="clear">
                        <li><a href="{{path('homepage') }}">Home</a></li>
                        <li class="active"><a href="{{path('about_index') }}">About</a></li>
                        <li><a href="{{path('course_index') }}">Courses</a></li>
                        <li><a href="{{ path('contact_index') }}">Contact</a></li>
                        {% if app.user %}
                            <li><a href="/logout">Logout</a></li>
                        {% else %}
                            <li><a href="/login">Login</a></li>
                        {% endif %}
                    </ul>
                </nav>
            {% endblock %}
        </header>
    </div>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>

