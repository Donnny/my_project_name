{# app/Resources/views/courses.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Contact{% endblock %}</title>
    {% stylesheets 'bundles/framework/template/layout/styles/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% image 'bundles/framework/template/images/demo/backgrounds/*' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endimage %}

    {% image 'bundles/framework/template/images/demo/gallery/*' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endimage %}

    {% javascripts 'bundles/framework/template/layout/scripts/*' %}
    <link rel="script" href="{{ asset_url }}" />
    {% endjavascripts %}
</head>
<body>
<div class="wrapper row1">
    <header id="header" class="clear">
        <div id="logo" class="fl_left">
            <h1><a href="index.html">Taalcursus</a></h1>
        </div>
        {% block sidebar %}
            <nav id="mainav" class="fl_right">
                <ul class="clear">
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/courses">Courses</a></li>
                    <li class="active"><a href="/contact">Contact</a></li>
                    {% if app.user %}
                        <li><a href="/logout">Logout</a></li>
                    {% else %}
                        <li><a href="/login">Login</a></li>
                    {% endif %}
                </ul>
            </nav>
        {% endblock %}
    </header>
</div>

    <main class="container clear">
        <!-- main body -->
        <!-- ################################################################################################ -->


        <div class="clear">
            <form action="/my-handling-form-page" method="post">
                <div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="user_name" />
                </div>
                <div>
                    <label for="mail">E-mail:</label>
                    <input type="email" id="mail" name="user_mail" />
                </div>
                <div>
                    <label for="msg">Message:</label>
                    <textarea id="msg" name="user_message"></textarea>
                </div>
                <button>
                    Send
                </button>
            </form>
            <div class="wrapper row3">

            </div>
    </main>
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
<!-- ################################################################################################ -->
  </body>
</html>