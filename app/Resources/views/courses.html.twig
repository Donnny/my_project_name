{# app/Resources/views/courses.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{% block title %}Courses{% endblock %}</title>
    {% stylesheets 'bundles/framework/template/layout/styles/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% image 'bundles/framework/template/images/demo/backgrounds/*' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endimage %}

    {% image 'bundles/framework/template/images/demo/gallery/*' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endimage %}

    {% javascripts 'bundles/framework/template/layout/scripts/*' %}
    <link rel="script" href="{{ asset_url }}" />
    {% endjavascripts %}
</head>
<body>
<div class="wrapper row1">
    <header id="header" class="clear">
        <div id="logo" class="fl_left">
            <h1><a href="index.html">Taalcursus</a></h1>
        </div>
        {% block sidebar %}
            <nav id="mainav" class="fl_right">
                <ul class="clear">
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li class="active"><a href="/courses">Courses</a></li>
                    <li><a href="/contact">Contact</a></li>
                    {% if app.user %}
                        <li><a href="/logout">Logout</a></li>
                    {% else %}
                        <li><a href="/login">Login</a></li>
                    {% endif %}
                </ul>
            </nav>
        {% endblock %}
    </header>
</div>
{% if app.user %}
{% for formCourse in formArray %}
    {{ form_start(formCourse) }}
    {{ form_row(formCourse.name) }}
    {{ form_row(formCourse.description) }}
    {{ form_row(formCourse.price) }}
    <button type="submit">Update course</button>
    {{ form_end(formCourse) }}
{% endfor %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.price) }}
    <button type="submit">Add course</button>
    {{ form_end(form) }}
{% else %}
<div class="wrapper row2 bgded" style="background-image:url('images/demo/backgrounds/1.png');">
    <div class="overlay">
        <div id="intro" class="clear">
            {% for course in courseData %}
            <article class="one_third first">
                <h3 class="heading">{{ course.name }}</h3>
                <ul class="nospace">
                    {{ course.description }}
                    <br>
                    {{ course.price }}
                </ul>
            </article>
            {% endfor %}
            <article class="one_third">
                <h3 class="heading">Aliquam purus urna porta faucibus</h3>
                <ul class="nospace">
                    <li>ullamcorper mauris sit amet</li>
                    <li>sed eget ultricies sem</li>
                    <li>proin quis lacus egestas</li>
                    <li>adipis cing ornare</li>
                    <li>donec luctus convallis rhoncus</li>
                </ul>
                <p class="link"><a href="#">Read More &raquo;</a></p>
            </article>
            <article class="one_third">
                <h3 class="heading">Proin ultricies dui leo egestas augue</h3>
                <ul class="nospace">
                    <li>ullamcorper mauris sit amet</li>
                    <li>sed eget ultricies sem</li>
                    <li>proin quis lacus egestas</li>
                    <li>adipis cing ornare</li>
                    <li>donec luctus convallis rhoncus</li>
                </ul>
                <p class="link"><a href="#">Read More &raquo;</a></p>
            </article>
            <!-- ################################################################################################ -->
        </div>
    </div>
</div>
{% endif %}
